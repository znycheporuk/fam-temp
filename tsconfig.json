{
	"include": [
		"remix.env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	],
	"compilerOptions": {
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
		"incremental": true,
		"isolatedModules": true,
		"noEmit": true,
		"allowJs": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es2021",
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./src/*"
			]
		},
		"forceConsistentCasingInFileNames": true
	}
}
