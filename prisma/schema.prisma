// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @default(now()) @updatedAt
  email          String          @unique
  password       String
  salt           String
  firstName      String
  lastName       String
  active         Boolean         @default(false)
  admin          Admin?
  teacher        Teacher?
  student        Student?
  contentManager ContentManager?
  resetToken     ResetToken?

  @@index([email])
}

model Admin {
  user       User    @relation(fields: [userId], references: [id])
  userId     String  @unique
  superAdmin Boolean @default(false)
}

model Teacher {
  user         User   @relation(fields: [userId], references: [id])
  userId       String @unique
  folders      String
  allowedSpace Int    @default(500000000)
  takenSpace   Int    @default(0)
}

model Student {
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
  group  String
}

model ContentManager {
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

model ResetToken {
  user      User   @relation(fields: [userId], references: [id])
  userId    String @unique
  token     String
  expiresAt BigInt
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  source    String
  html      String
  lang      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Article {
  lang        String
  section     String
  slug        String
  title       String
  description String
  keywords    String
  draft       Boolean  @default(true)
  articleLang String
  source      String
  html        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@unique([lang, section, slug])
}

model Image {
  src           String @id @unique
  ukDescription String
  enDescription String
}
